<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_myroad_one_hsize"
    >

    <ImageView
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:background="@drawable/bg_item_myroad_tow"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/im_myroad_time_ic"
        android:layout_marginStart="32dp" />

    <View
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/orang_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:elevation="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/im_myroad_time_ic"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/im_myroad_time_ic"
        android:id="@+id/view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/y60"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/im_myroad_time_ic"
        android:layout_marginLeft="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="8dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_myroad_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:alpha="0.57"
                android:text="江西农业大学"
                android:textSize="@dimen/text_size_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_myroad_what" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_2"
                android:alpha="0.87"
                android:text="科技月月评一等奖"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"
                android:id="@+id/tv_myroad_what" />

            <ImageView
                android:id="@+id/im_myroad_jiangzhang"
                android:layout_width="@dimen/y60"
                android:layout_height="@dimen/y40"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_our_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
